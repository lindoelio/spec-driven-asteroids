{
    "name": "@spec-driven/core",
    "version": "0.1.0",
    "description": "Core domain logic for SpecDrivenAgentic",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./ports": {
            "types": "./dist/ports/index.d.ts",
            "import": "./dist/ports/index.js"
        },
        "./domain": {
            "types": "./dist/domain/index.d.ts",
            "import": "./dist/domain/index.js"
        }
    },
    "scripts": {
        "build": "pnpm run validate:skills && tsc && cp -r src/resources dist/resources",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit",
        "validate:skills": "tsx scripts/validate-skills.ts",
        "test": "echo 'No tests yet'"
    },
    "devDependencies": {
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    },
    "files": [
        "dist"
    ],
    "license": "MIT"
}
{
    "name": "spec-driven-assistant-vscode",
    "version": "0.1.0",
    "displayName": "Spec-Driven Assistant",
    "description": "Spec-Driven Development for AI-Powered Software Engineering",
    "publisher": "lindoelio",
    "license": "MIT",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "AI",
        "Chat",
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onChatParticipant:specdriven.spec"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "specdriven.openGuidelines",
                "title": "SpecDriven: Open Guideline Document",
                "icon": "$(file)"
            },
            {
                "command": "specdriven.refreshSpecs",
                "title": "Refresh Specs",
                "icon": "$(refresh)"
            },
            {
                "command": "specdriven.refreshGuidelines",
                "title": "Refresh Guidelines",
                "icon": "$(refresh)"
            },
            {
                "command": "specdriven.openSpecFile",
                "title": "Open File",
                "icon": "$(go-to-file)"
            },
            {
                "command": "specdriven.openSpecFolder",
                "title": "Reveal in Finder",
                "icon": "$(folder-opened)"
            },
            {
                "command": "specdriven.copySpecId",
                "title": "Copy Spec ID",
                "icon": "$(copy)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "specdriven.refreshSpecs",
                    "when": "view == specdriven.specs",
                    "group": "navigation"
                },
                {
                    "command": "specdriven.refreshGuidelines",
                    "when": "view == specdriven.guidelines",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "specdriven.openSpecFile",
                    "when": "view == specdriven.specs && viewItem != spec",
                    "group": "navigation@1"
                },
                {
                    "command": "specdriven.openSpecFolder",
                    "when": "view == specdriven.specs && viewItem == spec",
                    "group": "navigation@1"
                },
                {
                    "command": "specdriven.copySpecId",
                    "when": "view == specdriven.specs && viewItem == spec",
                    "group": "navigation@2"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "specdriven",
                    "title": "Spec-Driven Artifacts",
                    "icon": "$(notebook)"
                }
            ]
        },
        "views": {
            "specdriven": [
                {
                    "id": "specdriven.specs",
                    "name": "Changes"
                },
                {
                    "id": "specdriven.guidelines",
                    "name": "Guidelines"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "specdriven.guidelines",
                "contents": "No guideline documents found.\nAdd files at the repository root (AGENTS.md, CONTRIBUTING.md, etc.) to view them here."
            },
            {
                "view": "specdriven.specs",
                "contents": "No changes found.\nCreate changes via chat or add files under .spec/changes."
            }
        ],
        "chatParticipants": [
            {
                "id": "specdriven.spec",
                "name": "spec",
                "fullName": "Spec-Driven Assistant",
                "description": "Spec-Driven Development Assistant",
                "isSticky": true,
                "commands": [
                    {
                        "name": "plan",
                        "description": "Start planning a new feature (Requirements \u2192 Design \u2192 Tasks)"
                    },
                    {
                        "name": "configure",
                        "description": "Initialize or update guideline documents"
                    },
                    {
                        "name": "status",
                        "description": "Show current spec and task status"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && cp -r ../../../core/dist/resources dist/resources && cp -r ../../outbound/copilot/dist/resources dist/copilot-resources",
        "watch": "pnpm build --watch",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit",
        "package": "pnpm build && vsce package --no-dependencies",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "@spec-driven/core": "workspace:*",
        "@spec-driven/adapter-copilot": "workspace:*"
    },
    "devDependencies": {
        "@types/vscode": "^1.93.0",
        "@vscode/vsce": "^3.7.1",
        "esbuild": "^0.27.2",
        "typescript": "^5.9.3"
    }
}
